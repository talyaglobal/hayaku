# Production Environment Variables
# Copy this file to .env.production for production deployment

# Supabase Configuration (Production)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key

# Site Configuration (Production)
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Stripe Configuration (Production)
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Email Configuration (Production)
SMTP_HOST=your_production_smtp_host
SMTP_PORT=587
SMTP_USER=your_production_email@domain.com
SMTP_PASSWORD=your_production_email_password

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com

# Security
NODE_ENV=production